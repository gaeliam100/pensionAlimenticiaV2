<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.to(".people",{
  scrollTrigger:{
      start: "top center",
      end: "bottom center",
      scrub:2,
      toggleActions: "restart pause reverse reset",
  },
  x:280,
  duration: 2,
})
const firstSect=document.getElementById('firstSect');
const navbar=document.getElementById('navbar');
const secondSect=document.getElementById('Intersection');
const svgNav=document.getElementById('svgNavbar');
const paths=svgNav.querySelectorAll('path');
const HamburgerMenu=document.getElementById('HamburgerMenu');
const mobileMenu=document.getElementById('mobileNavigation');
const closeButton=document.getElementById('closeButton');
const changeBackground=()=>{
navbar.classList.add('bg-white');
navbar.classList.remove('text-white');
navbar.classList.add('text-black');
firstSect.classList.add('hidden');
HamburgerMenu.classList.remove('text-white');
HamburgerMenu.classList.add('text-black');
} 
const changeBackground2=()=>{
navbar.classList.remove('bg-white');
navbar.classList.add('text-white');
navbar.classList.remove('text-black');
firstSect.classList.remove('hidden');
HamburgerMenu.classList.remove('text-black');
HamburgerMenu.classList.add('text-white');
}
ScrollTrigger.create({
  trigger: secondSect,
  start: "top-=85", // Ajusta según tus necesidades
  end: "bottom+=585", // Ajusta según tus necesidades
  onEnter: () => changeBackground(),
  onLeave: () => changeBackground2(),
  onEnterBack: () => changeBackground(),
  onLeaveBack: () => changeBackground2(),
});
HamburgerMenu.onclick=()=>{
mobileMenu.classList.remove('left-[100%]');
mobileMenu.classList.add('left-0');
}
closeButton.onclick=()=>{
mobileMenu.classList.remove('left-0');
mobileMenu.classList.add('left-[100%]');
}
</script>
<style is:global>
  *{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  scroll-behavior: smooth;
  }
body {
  font-family: 'Inter Variable', sans-serif;
  scroll-behavior: smooth;
  background-color:#ffffff;
    color: #000000;
}
</style>