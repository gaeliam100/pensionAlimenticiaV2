<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.to(".people",{
  scrollTrigger:{
      start: "top center",
      end: "bottom center",
      scrub:3,
      toggleActions: "restart pause reverse reset",
  },
  x:400,
  duration: 2,
})
const tl=gsap.timeline();
ScrollTrigger.create({
    trigger:"#panel",
    start: "top top",
    end: "bottom bottom",
    pin: true,
    pinSpacing: false,
})
window.addEventListener('scroll', function() {
    var navbar = document.getElementById('navbar'); // Reemplaza 'tuNavbar' con el ID de tu barra de navegación
    var scrollPosition = window.scrollY || document.documentElement.scrollTop;

    // Calcula el porcentaje de desplazamiento
    var scrollPercentage = (scrollPosition / (document.documentElement.scrollHeight - window.innerHeight)) * 100;

    if (scrollPercentage >= 13) {
        navbar.classList.remove('text-white', 'bg-blue-especial'); 
        navbar.classList.add('text-black', 'bg-white'); 
    } else {
        navbar.classList.remove('text-black', 'bg-white'); 
        navbar.classList.add('text-white', 'bg-blue-especial');
    }
});

</script>
<style is:global>
