---
import Logo from "./Logo.astro"
---
<div id="modal-component-container" class="fixed w-full h-full top-0 z-50 hidden">
    <div class="modal-flex-container flex items-center justify-center min-h-screen pt-4px-4 pb-20 text-center max-w-full">
        <div class="modal-bg-container fixed inset-0 bg-gray-700 bg-opacity-75">
        </div>
        
        <div class="modal-space-container hidden sm:inline-block sm:align-middle sm:h-screen"></div>

        <div class="modal-container inline-block align-bottom  bg-white rounded-lg text-left overflow-hidden shadow-lx transform  transition-all sm:my-8 sm:max-w-3xl w-full" >
            <form id="formsubmit">
            
            <div class="modal-wrapper bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="modal-wrapper-flex sm:flex sm:items-start">
                    <div class="modal-icon mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-especial sm:x-0 sm:h-10 sm:w-10">
                        <Logo width="60" height="60" idSvg="white"/>
                    </div>
                    <div class="modal-content text-center mt-3 sm:mt-0 sm:ml-4 sm:text-left w-full">
                        <h3 class=" text-lg font-medium text-gray-900">Formulario de contacto</h3>
                        <div class=" mt-2">
                            <p class="text-gray-500 text-sm">Estas por enviar un mensaje</p>
                        </div>
                        <div class="mt-2">
                                <section class=" flex flex-col">
                                    <section class="flex flex-col items-center  md:flex-row  justify-between flex-grow mb-4 gap-4">
                                        <div class="grid w-full md:max-w-xs items-center gap-1.5">
                                            <input
                                              placeholder="Ana Maria Lopez Martinez"
                                              type="text"
                                              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                                            />
                                        </div>                          
                                        <div class="grid w-full md:max-w-xs items-center gap-1.5">
                                            <input
                                              placeholder="ejemplo@email.com"
                                              type="email"
                                              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                                            />
                                        </div>                                
                                    </section>
                                    <textarea style="resize: none;"  class="flex h-36 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" 
                                    name="" id="" cols="30" rows="30" placeholder="Necesito una Asesoria para mi caso de pensiÃ³n alimenticia" >
                                    </textarea>  
                                </section>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-Actions bg-gray-50 px-3 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="submit"
                class="w-full inline-flex justify-center rounded-md border border-transparent mt-3
                shadow-lg px-4 py-2 font-medium text-navwhite bg-blue-especial 
                transform transition-all active:scale-95
                sm:ml-3 sm:w-auto sm:text-sm"
                >Enviar</button>
                <button  id="close-modal" class="
                w-full inline-flex justify-center rounded-md border border-transparent mt-3
                shadow-lg px-4 py-2 font-medium 
                text-gray-900
                bg-white 
                hover:bg-gray-50  
                transform transition-all active:scale-95
                sm:ml-3 sm:w-auto sm:text-sm"
                >Cancelar
            </button>

            </div>
        </form>

        </div>
    </div>

</div>
<script>
const closeModal = document.getElementById("close-modal");
    const modalComponent = document.getElementById("modal-component-container");
    const openModal = document.querySelectorAll(".open-modal");
    const modalForm = document.querySelector(".modal-container");
    const formsubmit= document.getElementById("formsubmit");
    openModal.forEach((element) => {
        element.addEventListener("click", () => {
            openModalF();
        });
    });

    // openModal.addEventListener("click", () => {
    //     console.log("Abierto");
    //     openModalF();
    // });
    closeModal.addEventListener("click", () => {
        closeModalF();
    });
    const openModalF = () => {
        document.getElementsByTagName("body")[0].style.overflow = "hidden";
        showAndHide(
            modalComponent,
            ["block", "bg-fadeIn"],
            ["hidden", "bg-fadeOut"],
        );
        showAndHide(modalForm, ["modal-scaleIn"], ["modal-scaleOut"]);
    };
    const closeModalF = () => {
        document.getElementsByTagName("body")[0].style.overflow = "auto";
        showAndHide(modalComponent, ["bg-fadeOut"], ["bg-fadeIn"]);
        showAndHide(modalForm, ["modal-scaleOut"], ["modal-scaleIn"]);
        setTimeout(() => {
            showAndHide(modalComponent, ["hidden"], ["block"]);
        }, 500);
    };
    const showAndHide = (element, classToAdd, classToRemove) => {
        element.classList.remove(...classToRemove);
        element.classList.add(...classToAdd);
    };
    formsubmit.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append("name", e.target[0].value);
        formData.append("email", e.target[1].value);
        formData.append("message", e.target[2].value);
        try {
            const response = await fetch(
                "https://formsubmit.co/ajax/gaelivan740@gmail.com",
                {
                    method: "POST",
                    body: formData,
                },
            );

            if (!response.ok) {
                closeModalF();
                // showToast(1);
            } else {
                closeModalF();
                // showToast(0);
            }
        } catch (error) {
            // showToast(0);
        }
    });
</script>