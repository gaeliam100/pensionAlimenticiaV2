<div id="modal-component-content" class="fixed inset-0 hidden">
    <div
        class="modal-flex-content flex items-end justify-center min-h-screen pt-4 px-4 pb-20 sm:block sm:p-0"
    >
        <div class="modal-bg-container fixed inset-0 bg-gray-700 bg-opacity-75">
        </div>

        <div
            class="modal-space-container hidden sm:inline-block sm:align-middle sm:h-screen"
        >
            &nbsp;
        </div>
        <form
            id="modal-container"
            class="modal-container inline-block align-bottom bg-white rounded-md text-left overflow-hidden shadow-xl transform transition-all
        sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full"
            method="post"
        >
            <div class="modal-wrapper bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="modal-wrapper-flex sm:flex sm:items-start">
                    <div
                        class="modal-icon mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm-10"
                    >
                        <img
                            class="w-full object-cover"
                            src="images/mas_calro-removebg-preview.webp"
                            alt="Logo del despacho"
                        />
                    </div>
                    <div
                        class="modal-content text-center mt-3 sm:mt-0 sm:ml-4 sm:text-left w-full"
                    >
                        <h3 class="text-lg font-medium text-gray-900">
                            Formulario de Contacto
                        </h3>
                        <div class="modal-form flex flex-col gap-4 w-full">
                            <div class="flex gap-4">
                                <div class="w-full">
                                    <input
                                        type="text"
                                        name="name"
                                        class="relative bg-gray-50ring-0 outline-none border border-neutral-500 text-neutral-900 placeholder-violet-700 text-sm rounded-lg focus:ring-violet-500 focus:border-violet-500 block w-full p-2.5 checked:bg-emerald-500"
                                        placeholder="Nombre..."
                                        required
                                        id="name"
                                    />
                                </div>
                                <div class="w-full">
                                    <input
                                        type="text"
                                        class="relative bg-gray-50ring-0 outline-none border border-neutral-500 text-neutral-900 placeholder-violet-700 text-sm rounded-lg focus:ring-violet-500 focus:border-violet-500 block w-full p-2.5 checked:bg-emerald-500"
                                        placeholder="Correo..."
                                        required
                                        name="email"
                                    />
                                </div>
                            </div>
                            <div class="flex flex-col">
                                <textarea
                                    name="message"
                                    id="message"
                                    cols="30"
                                    rows="5"
                                    placeholder="mensaje"
                                    class="relative bg-gray-50ring-0 outline-none border border-neutral-500 text-neutral-900 placeholder-violet-700 text-sm rounded-lg focus:ring-violet-500 focus:border-violet-500 block w-full p-2.5 checked:bg-emerald-500"
                                    required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="modal-actions bg-gray-50 py-3 px-4 sm:px-6 sm:flex sm:flex-row sm:justify-end"
            >
                <button type="button"
                    id="close-modal"
                    class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-md px-4 py-2 bg-gray-100 font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-200
                sm:ml-3 sm:w-auto sm:text-sm sm:mt-0"
                    >Cancelar</button
                >
                <button type="submit"
                    id="send"
                    class="w-full inline-flex justify-center rounded-md border border-gray-300 shadow-md px-4 py-2 mt-3 bg-blue-100 font-medium text-gray-700 hover:bg-blue-200 focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-400
                sm:ml-3 sm:w-auto sm:text-sm sm:mt-0"
                    >Enviar</button
                >
            </div>
        </form>
    </div>
</div>
<script>
    const closeModal = document.getElementById("close-modal");
    const modalComponent = document.getElementById("modal-component-content");
    const openModal = document.querySelectorAll(".open-modal");
    const modalForm = document.getElementById("modal-container");
    openModal.forEach((element) => {
        element.addEventListener("click", () => {
            openModalF();
        });
    });

    // openModal.addEventListener("click", () => {
    //     console.log("Abierto");
    //     openModalF();
    // });
    closeModal.addEventListener("click", () => {
        closeModalF();
    });
    const openModalF = () => {
        document.getElementsByTagName("body")[0].style.overflow = "hidden";
        showAndHide(
            modalComponent,
            ["block", "bg-fadeIn"],
            ["hidden", "bg-fadeOut"],
        );
        showAndHide(modalForm, ["modal-scaleIn"], ["modal-scaleOut"]);
    };
    const closeModalF = () => {
        document.getElementsByTagName("body")[0].style.overflow = "auto";
        showAndHide(modalComponent, ["bg-fadeOut"], ["bg-fadeIn"]);
        showAndHide(modalForm, ["modal-scaleOut"], ["modal-scaleIn"]);
        setTimeout(() => {
            showAndHide(modalComponent, ["hidden"], ["block"]);
        }, 500);
    };
    const showAndHide = (element, classToAdd, classToRemove) => {
        element.classList.remove(...classToRemove);
        element.classList.add(...classToAdd);
    };
    const showToast = (value) => {
        if (value === 1) {
            Toastify({
                text: "Correo enviado correctamente nos pondremos en contacto contigo lo antes posible",
                duration: 6000,
                style: {
                    background:
                        "linear-gradient(207deg, rgba(58,63,180,1) 0%, rgba(29,90,253,1) 50%, rgba(69,160,252,1) 100%);",
                },
            }).showToast();
        } else {
            Toastify({
                text: "Error al enviar el correo, intentalo de nuevo mas tarde",
                duration: 6000,
                style: {
                    background:
                        "linear-gradient(352deg, rgba(2,0,36,1) 6%, rgba(121,9,9,1) 43%, rgba(255,0,3,1) 77%);",
                },
            }).showToast();
        }
    };
    modalForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append("name", e.target[0].value);
        formData.append("email", e.target[1].value);
        formData.append("message", e.target[2].value);
        try {
            const response = await fetch(
                "https://formsubmit.co/ajax/gaelivan740@gmail.com",
                {
                    method: "POST",
                    body: formData,
                },
            );

            if (!response.ok) {
                closeModalF();
                showToast(1);
            } else {
                closeModalF();
                showToast(0);
            }
        } catch (error) {
            showToast(0);
        }
    });
</script>
