---
const {titleList,descList } = Astro.props;
---
<li class="list-none w-full m-5 p-2 rounded-md shadow-xl">
    <input  type="radio" name="accordion" id="first" class="hidden">
    <label data-before="+" for="first" class="flex items-center p-2 
    text-lg font-semibold cursor-pointer before:content-[attr(data-before)] 
    before:mr-4 before:text-3xl before:font-semibold">
    {{titleList}}
    </label>
    <div class="content
    px-4 
    leading-26 
    max-h-0 
    overflow-hidden 
    transition-max-h-05s 
    transition-padding-05s">
        <p>
            {{descList}}
        </p>
    </div>
</li>