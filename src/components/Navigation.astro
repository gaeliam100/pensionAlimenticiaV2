---
import Logo from "./Logo.astro"
const optionsMenu = [
  {
    name: "Lo que debes saber",
    link: "#whatyouneed",
    aria: "Ir a la sección de resultados",
  },
  {
    name: "La elección acertada",
    link: "#eleccionacertada",
    aria: "Ir a la sección de inicio",
  },
  {
    name: "Nuestros Servicios",
    link: "#Servicios",
    aria: "Ir a la sección de servicios",
  },
  {
    name: "Testimonios",
    link: "#whyUs",
    aria: "Ir a la sección de blog",
  },
];
---

<header
id="navbar"
  class="text-white transition-colors antialiased sticky z-[7] top-0 " 
>
  <div class="h-20">
    <section
      class="grid grid-cols-[auto,1fr] gap-4 lg:grid-cols-[auto,auto,1fr] lg:gap-9 items-center h-full my-0  py-0 px-4 mx-auto max-w-[1920px]"
    >
      <div class="flex items-center justify-start h-full cursor-pointer">
        <a aria-label="Ir al Inicio" id="navContact2" href="#" class="flex font-semibold items-center justify-center text-current max-w-[250px]">
          <Logo  width="90" height="90" idSvg="svgNavbar" fill="#fff"/>
        <span class="hidden sm:flex">
          Garcia y Villegas Asesoria Especializada  
        </span>
        </a>
      </div>
      <nav class="hidden lg:flex ">
        <ul id="ulElements" class="lg:grid grid-cols-4 h-full">
        {
          optionsMenu.map((option, index) => (
            <li class="flex items-center  h-full py-0 px-3 font-semibold text-base leading-6 cursor-pointer ">
              <a class="mr-2" href={option.link} aria-label={option.aria}>
                {option.name}
              </a>
            </li>
          ))
        }
        </ul>
      </nav>
      <div class="flex items-center w-full h-full">
        <button id="navContact"
          class="open-modal ml-auto h-10 py-0 px-6 border-2 border-[#eeee]   rounded-lg text-base hover:border-[#fff] cursor-pointer transition"
        >

          Contacto
        </button>
        <button 
        id="HamburgerMenu"
        aria-label="Abrir menú"
        class=" lg:hidden ml-2 h-10 py-0 px-2 border-2 border-[#eeee] rounded-lg text-white text-base hover:border-[#fff] cursor-pointer transition"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-menu-2"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
              d="M4 18l16 0"></path></svg
          >
        </button>
      </div>
    </section>
  </div>
  <section id="mobileNavigation" class="hidden lg:hidden absolute bg-white w-full h-screen left-[100%] duration-300 ease-in-out top-0">
    
    <div class="flex justify-between items-center">
      <div class="flex items-center justify-start h-full cursor-pointer">
        <a aria-label="Ir al Inicio" id="navContactModal" href="#" class="flex font-semibold items-center justify-center text-current max-w-[250px]">
          <Logo  width="90" height="90" idSvg="svgNavbar" fill="#000" />
        <span class="flex text-black">
          Garcia y Villegas Asesoria Especializada  
        </span>
        </a>
      </div>
      <button id="nsavContact"
      class="open-modal ml-auto h-10 py-0 px-6 border-2 border-[#eeee]  text-black  rounded-lg text-base hover:border-[#fff] cursor-pointer transition"
    >
      Contacto
    </button>
    <button id="closeButton" class=" lg:hidden ml-2 h-10 py-0 px-2 border-2 border-[#eeee] rounded-lg text-black text-base hover:border-[#fff] cursor-pointer transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6l-12 12" /><path d="M6 6l12 12" /></svg>
    </button>
    </div>   
    <ul class="w-full text-base text-black ">
          {
            optionsMenu.map((option, index) => (
              <li class="flex items-center  h-16 py-0 px-3 font-semibold text-lg leading-6 cursor-pointer">
                <a class="mr-2" href
                ={option.link} aria-label={option.aria}>
                  {option.name}
                </a>
              </li>
            ))
          }
        </ul>
  </section>
</header>
