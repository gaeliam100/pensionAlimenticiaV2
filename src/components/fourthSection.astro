---
import Title from "./Title.astro";
const pensiones = [
  {
    title: "Recibe asesoría especializada.",
  },
  {
    title: "Soluciona tus problemas de pensión alimenticia de manera rápida.",
  },
  {
    title: "Un especialista en pensiones alimenticias con garantía. ",
  },
  {
    title: "Resuelve tus problemas de manera satisfactoria.",
  },
];
---

<section id="eleccionacertada" class="grid grid-cols-1 lg:grid-cols-2 bg-white">
  <article>
    <h2 class=" -tracking-wider text-5xl leading-[1.07] mb-0 mt-0">La Elección Acertada para tus Asuntos Legales
    </h2>
    <p class=" leading-relaxed font-normal text-[19px] mt-4 tracking-wider-2" style="text-wrap:pretty">
      Representación legal en
      asuntos de derecho. Nuestro objetivo es ayudar a nuestros clientes a
      resolver sus problemas de la manera más efectiva.
    </p>
    <div>
      <button
      class=" bg-b-blue-to text-white font-bold py-2 px-4 rounded-full mt-8 open-modal"
      
      >Contacta a nuestro equipo</button>
    </div>
    <ul class="mt-8">
      {
        pensiones.map((pension, index) => (
          <li class="flex items-start py-3 gap-x-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-square-rounded-check-filled"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path
                d="M12 2c-.218 0 -.432 .002 -.642 .005l-.616 .017l-.299 .013l-.579 .034l-.553 .046c-4.785 .464 -6.732 2.411 -7.196 7.196l-.046 .553l-.034 .579c-.005 .098 -.01 .198 -.013 .299l-.017 .616l-.004 .318l-.001 .324c0 .218 .002 .432 .005 .642l.017 .616l.013 .299l.034 .579l.046 .553c.464 4.785 2.411 6.732 7.196 7.196l.553 .046l.579 .034c.098 .005 .198 .01 .299 .013l.616 .017l.642 .005l.642 -.005l.616 -.017l.299 -.013l.579 -.034l.553 -.046c4.785 -.464 6.732 -2.411 7.196 -7.196l.046 -.553l.034 -.579c.005 -.098 .01 -.198 .013 -.299l.017 -.616l.005 -.642l-.005 -.642l-.017 -.616l-.013 -.299l-.034 -.579l-.046 -.553c-.464 -4.785 -2.411 -6.732 -7.196 -7.196l-.553 -.046l-.579 -.034a28.058 28.058 0 0 0 -.299 -.013l-.616 -.017l-.318 -.004l-.324 -.001zm2.293 7.293a1 1 0 0 1 1.497 1.32l-.083 .094l-4 4a1 1 0 0 1 -1.32 .083l-.094 -.083l-2 -2a1 1 0 0 1 1.32 -1.497l.094 .083l1.293 1.292l3.293 -3.292z"
                fill="#769FCD"
                stroke-width="0"
              />
            </svg>
            <p>{pension.title}</p>
          </li>
        ))
      }
    </ul>
  </article>
  <picture class=" flex justify-center items-center"> 
    <source srcset="/images/why.webp" type="image/webp" />
    <img src="/images/why.jpg" alt="Porque elegirnos" class="w-full h-full object-cover max-w-2xl" />
  </picture>
</section>
